---
import styles from './Footer.module.css';

const currentYear = new Date().getFullYear();

const footerSections = [
  {
    title: 'Resources',
    links: [
      { href: '/conditions', label: 'Health Topics' },
      { href: '/ingredients', label: 'Ingredient Guide' },
      { href: '/safety-guide', label: 'Safety Tips' },
      { href: '/our-picks', label: 'Our Picks' },
    ]
  },
  {
    title: 'Health Topics',
    links: [
      { href: '/conditions/respiratory-issues', label: 'Respiratory Issues' },
      { href: '/conditions/urinary-health', label: 'Urinary Health' },
      { href: '/conditions/allergies', label: 'Allergies' },
      { href: '/conditions/digestive-concerns', label: 'Digestive Concerns' },
    ]
  },
  {
    title: 'Ingredient Info',
    links: [
      { href: '/ingredients/bentonite-clay', label: 'Bentonite Clay' },
      { href: '/ingredients/silica-gel', label: 'Silica Gel' },
      { href: '/ingredients/activated-carbon', label: 'Activated Carbon' },
      { href: '/ingredients/pine-wood', label: 'Pine Wood' },
    ]
  }
];
---

<footer class={styles.footer}>
  <div class={styles.container}>
    <div class={styles.grid}>
      <div class={styles.brand}>
        <a href="/" class={styles.logo}>
          <svg class={styles.logoIcon} viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <circle cx="16" cy="16" r="14" stroke="currentColor" stroke-width="2"/>
            <path d="M10 17C10 17 12 20 16 20C20 20 22 17 22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <circle cx="12" cy="13" r="2" fill="currentColor"/>
            <circle cx="20" cy="13" r="2" fill="currentColor"/>
            <path d="M14 8L12 4M18 8L20 4M11 10L7 8M21 10L25 8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
          <span>HealthyCatLitter</span>
        </a>
        <p class={styles.tagline}>
          Information and opinions about cat litter ingredients and products. Not veterinary advice.
        </p>
        <p class={styles.purrifyLink}>
          Looking for premium odor control? We recommend <a href="https://www.purrify.ca?utm_source=healthycatlitter&utm_medium=footer">Purrify</a> - activated carbon technology trusted by cat owners.
        </p>
      </div>

      {footerSections.map(section => (
        <div class={styles.section}>
          <h3 class={styles.sectionTitle}>{section.title}</h3>
          <ul class={styles.linkList}>
            {section.links.map(link => (
              <li>
                <a href={link.href} class={styles.link}>{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class={styles.disclaimer}>
      <h4 class={styles.disclaimerTitle}>Important Disclaimer</h4>
      <p>
        <strong>This website is not affiliated with any veterinary organization.</strong> All content represents the personal opinions and research of the site authors, not professional veterinary advice. We are not veterinarians. Always consult with a qualified veterinarian for any health concerns about your cat. Never delay seeking professional veterinary care based on information from this website.
      </p>
    </div>

    <div class={styles.bottom}>
      <p class={styles.copyright}>
        &copy; {currentYear} HealthyCatLitter.com. All rights reserved.
      </p>
      <nav class={styles.bottomNav} aria-label="Footer navigation">
        <a href="/safety-guide">Safety Guide</a>
        <a href="/ingredients">Ingredients</a>
        <a href="/our-picks">Our Picks</a>
      </nav>
    </div>
  </div>
</footer>
