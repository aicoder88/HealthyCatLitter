---
import styles from './DisclaimerBox.module.css';

interface Props {
  type?: 'medical' | 'general' | 'affiliate';
  title?: string;
}

const { type = 'medical', title } = Astro.props;

const defaults = {
  medical: {
    title: 'Medical Disclaimer',
    icon: 'medical'
  },
  general: {
    title: 'Important Note',
    icon: 'info'
  },
  affiliate: {
    title: 'Affiliate Disclosure',
    icon: 'link'
  }
};

const config = defaults[type];
const displayTitle = title || config.title;
---

<aside class:list={[styles.disclaimer, styles[type]]} role="note">
  <div class={styles.header}>
    {config.icon === 'medical' && (
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class={styles.icon} aria-hidden="true">
        <path d="M22 12h-4l-3 9L9 3l-3 9H2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    )}
    {config.icon === 'info' && (
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class={styles.icon} aria-hidden="true">
        <circle cx="12" cy="12" r="10"/>
        <path d="M12 16v-4M12 8h.01" stroke-linecap="round"/>
      </svg>
    )}
    {config.icon === 'link' && (
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class={styles.icon} aria-hidden="true">
        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    )}
    <h4 class={styles.title}>{displayTitle}</h4>
  </div>
  <div class={styles.content}>
    <slot />
  </div>
</aside>
