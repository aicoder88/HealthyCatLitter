  .litter-info span {
    font-size: var(--text-sm);
    color: var(--color-text-light);
  }

  .highlight-box {
    background: var(--color-accent);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    border-left: 4px solid var(--color-primary);
  }

  .highlight-box h3 {
    margin-top: 0;
  }
</style>
